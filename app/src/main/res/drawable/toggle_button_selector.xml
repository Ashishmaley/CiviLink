<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/toggle_button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:drawable="@drawable/hotspot" android:state_checked="false" />
    <!-- Checked state -->
    <item android:drawable="@drawable/hotspot_bw" android:state_checked="true" />
    <!-- Pressed (clicked) state -->
    <item android:drawable="@drawable/hotspot_bw" android:state_pressed="true" />
</selector>
