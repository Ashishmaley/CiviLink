<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/clr_bg"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/clr_bg"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:behavior_peekHeight="100dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/clr_bg"
        android:id="@+id/bottomSheet"
        android:padding="16dp">
<View
    android:layout_width="20dp"
    android:layout_margin="15dp"
    android:layout_height="5dp"
    android:layout_gravity="center"
    android:background="@drawable/custom_progress_bar"
    />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#A6303030"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@color/white"
            />
        <TextView
        android:id="@+id/useId"
        android:textSize="20dp"
            android:background="@drawable/otp_box"
        android:hint="Name"
        android:padding="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/advent_pro_medium"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#A6303030"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem Title : "
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/pTitle"
                android:textColor="@color/white"
                android:hint="404"
                android:background="@drawable/otp_box"
                android:layout_margin="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:layout_width="wrap_content"
                android:padding="16dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout></androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#A6303030"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem : "
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@color/white"
            />
    <TextView
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:fontFamily="@font/advent_pro_medium"
        android:hint="@string/profile_information"
        android:background="@drawable/otp_box"
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:layout_height="wrap_content"
        />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#A6303030"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uEmail"
            android:text="Resource : "
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_marginTop="5dp"
            android:padding="1dp"
            android:clickable="true"
            android:outlineSpotShadowColor="@color/white"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/camera"
            android:layout_marginBottom="10dp"
            android:focusable="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/timeAndDate"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="404"
                android:layout_width="wrap_content"
                android:padding="16dp"
                android:layout_height="wrap_content"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👍"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/like"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="404"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:padding="16dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
            </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/commentButton"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
                android:clickable="false"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
                android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@color/black"
            />
                <TextView
                    android:id="@+id/commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:clickable="false"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/advent_pro_medium"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click to comment"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/advent_pro_medium"
                    android:textColor="@color/black"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/black"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="wrap_content"
    >
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="delete"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="10dp"
            android:textColor="@color/overlay"
            android:textStyle="bold" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Solved"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#028143"
            android:textStyle="bold" />
</LinearLayout>
    </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

